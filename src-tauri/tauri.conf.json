{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Okane",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": ["$APP/*", "$DOWNLOAD/*"]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/16x16.png",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/192x192.png",
        "icons/512x512.png",
        "icons/icon.ico"
      ],
      "identifier": "com.okane.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Okane",
        "width": 800,
        "height": 600
      }
    ]
  }
}
